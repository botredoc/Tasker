    <TextView
        android:id="@+id/devName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/space"
        android:gravity="center"
        android:text="Designed by BotRedoc"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/devImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/extratext"
        app:layout_constraintTop_toTopOf="@+id/devImage"/>

    <ImageView
        android:id="@+id/devImage"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/bot"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/devName" />


